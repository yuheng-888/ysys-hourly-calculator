<Window x:Class="AutoSoundTimeV3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="时薪计算器-亿声永势 V3"
        Width="1000" Height="700"
        MinWidth="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{DynamicResource App.Sidebar}" BorderBrush="{DynamicResource App.Border}" BorderThickness="0,0,1,0">
            <StackPanel Margin="14" VerticalAlignment="Stretch">
                <TextBlock Text="音频工具" FontWeight="Bold" FontSize="16" Margin="4,6,4,12" />

                <Button Content="自动获取时长" Command="{Binding SelectTabCommand}" CommandParameter="Auto"
                        Visibility="{Binding Settings.ShowAutoMode, Converter={StaticResource BoolToVisibility}}"
                        Margin="0,2" Padding="10,8" HorizontalContentAlignment="Left" />
                <Button Content="手动计算薪资" Command="{Binding SelectTabCommand}" CommandParameter="Manual"
                        Visibility="{Binding Settings.ShowManualMode, Converter={StaticResource BoolToVisibility}}"
                        Margin="0,2" Padding="10,8" HorizontalContentAlignment="Left" />
                <Button Content="团队结算" Command="{Binding SelectTabCommand}" CommandParameter="Team"
                        Visibility="{Binding Settings.ShowTeamMode, Converter={StaticResource BoolToVisibility}}"
                        Margin="0,2" Padding="10,8" HorizontalContentAlignment="Left" />

                <Separator Margin="0,12" />

                <TextBlock Text="时薪计算器" Foreground="{DynamicResource App.TextSecondary}" FontSize="12" />
                <TextBlock Text="v3.3.0" Foreground="{DynamicResource App.TextSecondary}" FontSize="11" />

                <StackPanel VerticalAlignment="Bottom" Margin="0,12,0,0">
                    <Button Content="设置" Command="{Binding OpenSettingsCommand}" Padding="10,6" />
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" LastChildFill="True" Background="{DynamicResource App.Panel}" Margin="0,0,0,1">
                <TextBlock Text="" DockPanel.Dock="Left" />
            </DockPanel>

            <Border Grid.Row="1" Background="{DynamicResource App.Panel}">
                <ContentControl Content="{Binding CurrentViewModel}" Margin="16" />
            </Border>
        </Grid>
    </Grid>
</Window>
